  <div class="row">
    <div class="col-lg-8 col-md-8 col-sm-8 col-xs-8">
      <h2><%= @exam.name %></h2>
    </div>
    <div class="col-lg-4 col-md-4 col-sm-4 col-xs-4">
      <div class="text-right">
        <h2>
          <%= link_to exams_path, :class => 'btn btn-primary' do %>
            <span class="glyphicon glyphicon-chevron-left"></span> Voltar
          <% end %> 
          <%= link_to edit_exam_path(@exam), :class => 'btn btn-success' do %>
            <span class="glyphicon glyphicon-list-alt"></span> Editar
          <% end %> 
          <%= link_to exam_path(@exam), method: :delete, :class => 'btn btn-danger', data: { confirm: t('Are you sure?')  } do %>
            <span class="glyphicon glyphicon-remove"></span> Apagar
          <% end %> 
        </h2>
      </div>
    </div>
  </div> <!-- /.row -->
<p>
  <strong><%= t("name") %>:</strong>
  <%= @exam.name %>
</p>

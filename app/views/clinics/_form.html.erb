<%= simple_form_for(@clinic) do |f| %>
  <%= f.error_notification %>

    <div class="form-inputs">
    <%= f.input :fantasy_name, :label => t("fantasy_name"), autofocus: true %>
    <%= f.input :corporate_name, :label => t("corporate_name") %>
    <%= f.input :cnpj, :label => t("cnpj") %>
    <%= f.input :phone, :label => t("phone") %>
    <%= f.input :technical_manager, :label => t("technical_manager") %>
    <%= f.input :address, :label => t("address") %>
    <%= f.input :cep, :label => t("cep") %>
    <%= f.input :city, :label => t("city") %>
    <%= f.association :province, :label => t("province") %>
  </div>
  <div class="actions text-right">
      <%= link_to 'Cancelar', :back, :class => 'btn btn-default' %>
      <%= button_tag(type: 'submit', class: "btn btn-primary") do %>
        <span class="glyphicon glyphicon-floppy-disk"></span> Salvar
      <% end %>
  </div>
<% end %>

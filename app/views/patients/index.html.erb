<h1><%= t("patients") %></h1>
<div class="text-right">
  <%= link_to new_patient_path, :class => 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-plus"></span> Adicionar
  <% end %>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= t('name') %></th>
      <th><%= t('gender') %></th>
      <th><%= t('email') %></th>
      <th><%= t('phone') %></th>
    </tr>
  </thead>

  <tbody>
    <% @patients.each do |patient| %>
      <tr>
        <td><%= link_to patient.name, patient %></td>
        <td><%= patient.gender.name %></td>
        <td><%= patient.email %></td>
        <td><%= patient.phone %></td>
      </tr>
    <% end %>
  </tbody>
</table>


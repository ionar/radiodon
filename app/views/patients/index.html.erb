<div class="row">
  <div class="col-lg-6">
    <h1><%= t("patients") %></h1>
  </div>
  <div class="col-lg-6">
    <div class="text-right">
    <%= link_to new_patient_path, :class => 'btn btn-primary' do %>
      <span class="glyphicon glyphicon-plus"></span> Adicionar
    <% end %>
    </div>
  </div>
</div> <!-- /.row -->
<div class="row">
<hr>
  <div class="col-lg-12">
    <%= search_form_for @q do |f| %>
      <div class="input-group">
        <%= f.search_field :name_cont, :class => 'form-control', :placeholder => 'Buscar por...' %>
        <span class="input-group-btn">
          <%= button_tag(type: 'submit', class: "btn btn-default") do %>
            Buscar
          <% end %>
        </span>
      </div><!-- /input-group -->
    <% end %>
  </div><!-- /.col-lg-12 -->
</div> <!-- /.row -->
<%= paginate @patients, window: 2  %>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= sort_link(@q, :name) %></th>
      <th><%= t('filial') %></th>
      <th><%= t('gender') %></th>
      <th><%= t('email') %></th>
      <th><%= t('phone') %></th>
    </tr>
  </thead>

  <tbody>
    <% @patients.each do |patient| %>
      <tr>
        <td><%= link_to patient.name, patient %></td>
        <td><%= patient.filial %></td>
        <td><%= patient.gender %></td>
        <td><%= patient.email %></td>
        <td><%= patient.phone %></td>
      </tr>
    <% end %>
  </tbody>
</table>


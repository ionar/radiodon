<div class="modal-dialog">
    <div class="modal-content">
      	<div class="modal-header">
      	<button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
		  <h3>Selecionar Paciente</h3>
		</div><!-- /.modal-header -->
		  <div class="modal-body">
			  <div class="row">
				  <div class="col-lg-12">
				    <%= search_form_for @q, remote: :true do |f| %>
				      <div class="input-group">
				        <%= f.search_field :name_cont, :class => 'form-control', :placeholder => 'Buscar por...' %>
				        <span class="input-group-btn">
				          <%= button_tag(type: 'submit', class: "btn btn-default") do %>
				            Buscar
				          <% end %>
				        </span>
				      </div><!-- /input-group -->
				    <% end %>
				  </div><!-- /.col-lg-12 -->
				</div> <!-- /.row -->
				<%= paginate @patients,  remote: true, window: 2  %><br>
				<small><%= page_entries_info @patients %></small>
				<table class="table table-striped">
				  <thead>
				    <tr>
				      <th><%= sort_link(@q, :name) %></th>
				      <th><%= t('gender') %></th>
				      <th><%= t('cpf') %></th>
				    </tr>
				  </thead>

				  <tbody>
				    <% @patients.each do |patient| %>
				      <tr>
				        <td><%= link_to patient.name, patient %></td>
				        <td><%= patient.gender %></td>
				        <td><%= patient.cpf %></td>
				      </tr>
				    <% end %>
				  </tbody>
				</table>
						    

		  </div><!-- /.modal-body -->
		  <div class="modal-footer">
			<button type="button" class="btn btn-primary" data-dismiss="modal">Selecionar</button>		  
			<button type="button" class="btn btn-default" data-dismiss="modal">Cancelar</button>
		  </div>

    </div><!-- /.modal-content -->
</div><!-- /.modal-dialog -->		
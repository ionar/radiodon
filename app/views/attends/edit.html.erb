  <div class="row">
    <div class="col-lg-8 col-md-8 col-sm-8 col-xs-8">
      <h2>Editar <%= t("attend") %> <small><%= l(@attend.schedule, format: '%A, %d de %B') %> - <%= @attend.appointment.strftime("%H:%M") %></small></h2>
    </div>
    <div class="col-lg-4 col-md-4 col-sm-4 col-xs-4">
      <div class="text-right">
        <h2>
		 <%= link_to :back, :class => 'btn btn-primary' do %>
		    <span class="glyphicon glyphicon-chevron-left"></span> Voltar
		  <% end %> 
		  <%= link_to attend_path(@attend), method: :delete, :class => 'btn btn-danger', data: { confirm: t('Are you sure?')  } do %>
		    <span class="glyphicon glyphicon-remove"></span> Apagar
		  <% end %> 
        </h2>
      </div>
    </div>
  </div> <!-- /.row -->
  <div class="panel panel-default">
    <div class="panel-body">
      <span>Nome Completo: </span><span id="attend_patient_name" class="panel-patient"><%= @attend.patient.name if @attend.patient.present? %></span><br>
      <span>CPF: </span><span id="attend_patient_cpf" class="panel-patient"><%= @attend.patient.cpf if @attend.patient.present?%></span><br>
      <span>Endere√ßo: </span><span id="attend_patient_endereco" class="panel-patient"><%= @attend.patient.address if @attend.patient.present? %></span><br>
      <span>Cidade/UF: </span><span id="attend_patient_cidade" class="panel-patient"><%= @attend.patient.city if @attend.patient.present?%> / <%= @attend.patient.province.acronym if @attend.patient.present?%></span><br>
      <span>Nascimento: </span><span id="attend_patient_nascimento" class="panel-patient"><%= @attend.patient.birth_date.strftime("%d/%m/%Y") if @attend.patient.present? %></span><br>
    </div><!-- /panel-body -->
  </div><!-- /panel -->
<%= render 'form' %>

<%= simple_form_for(@attend) do |f| %>
  <%= f.error_notification %>
  <div class="form-inputs">
    <div class="form-group">
      <%= link_to patients_path, remote: true, class: "btn btn-success" do %>
        <span class="glyphicon glyphicon-lock" aria-hidden="true"> </span> Selecionar Paciente
      <% end %>
    </div>
    <%= f.hidden_field :patient_id, :label => t('patient') %> 
    <%= f.hidden_field :schedule, :label => t('schedule'), :as => :date_picker %>   
    <%= f.hidden_field :appointment, :label => t('appointment')  %>
    <%= f.association :requester, :label => t('requester'), prompt: t('select') %> 
    <%= f.association :exam, :label => t('exams'), as: :check_boxes %>    
    <%= f.input :notes, :label => t('notes') %>
    <%= f.input :finalized, :label => t('finalized')+"?" %>
  </div><!-- /form-inputs -->
  <div class="actions text-right">
      <%= button_tag(type: 'submit', class: "btn btn-primary") do %>
        <span class="glyphicon glyphicon-floppy-disk"></span> Salvar
      <% end %>
  </div>
<% end %>
<div class="modal fade" id="patient-modal"></div>
<div class="modal fade" id="patient-new-modal"></div>